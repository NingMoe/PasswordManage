$(function(){
    var Yheight = $(window).height()-295;
	$(".content").height(Yheight);
	
	$(".small_window").click(function(){
	    $(".window_bg,.window_cont").show();
		$(".window_cont").css({height:"460px",marginTop:"-230px"});
	});
	$(".large_window").click(function(){
	    $(".window_bg,.window_cont").show();
