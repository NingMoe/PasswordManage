var code; //在全局 定义验证码    
function createCode() {
    var imgObj = $('#checkCode');
    var src = imgObj.attr("src");
    imgObj.attr("src", chgUrl(src));

    //为了使每次生成图片不一致，即不让浏览器读缓存，所以需要加上时间戳
    function chgUrl(url) {
        var timestamp = (new Date()).valueOf();
        var newUrl = url.substring(0, 17);
        if ((url.indexOf("?") >= 0)) {
            newUrl = url + "&t=" + timestamp;
        } else {
            newUrl = url + "?t=" + timestamp;
        }
        return newUrl;
    }

